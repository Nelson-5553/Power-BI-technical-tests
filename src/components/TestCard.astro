---
import { getCollection } from "astro:content";
const Tests = await getCollection("tests");
// console.log(Tests.data.color);
---

<div class="max-w-7xl mx-auto px-4 py-12">
    <div class="flex flex-col items-center text-center md:text-left gap-6">
        <div class="flex flex-row items-center gap-4">
            <div class="grid grid-cols-2 gap-12">
                {
                    Tests.map((test) => (
                        <div class="relative z-10 bg-white rounded-xl ">
                            <div
                                class={`bg-gradient-to-l from-${test.data.color}-400 to-${test.data.color}-600 rounded-t-xl h-2`}
                            ></div>
                            <div class="max-w-md bg-white rounded-b-xl shadow-lg p-6 space-y-4">
                                <div class="flex items-center gap-4">
                                    <div
                                        class={`bg-gradient-to-br to-${test.data.color}-500 from-${test.data.color}-600 p-3 rounded-xl`}
                                    >
                                        <svg
                                            class="w-6 h-6 text-white"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="2"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                d="M13 5L13 19M13 5L7 11M13 5L19 11"
                                            />
                                        </svg>
                                    </div>
                                    <h2 class="text-lg font-bold text-gray-800">
                                        {test.data.title}
                                    </h2>
                                </div>

                                <p class="text-sm text-gray-600">
                                    {test.data.description}
                                </p>

                                <div class="flex items-center gap-3 text-sm text-gray-500">
                                    <div class="flex items-center gap-1">
                                        <svg
                                            class="w-4 h-4"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="1.5"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                d="M12 6v6l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                                            />
                                        </svg>
                                        <span>{test.data.time}</span>
                                    </div>

                                    <span
                                        class={`bg-gradient-to-br to-${test.data.color}-500 from-${test.data.color}-600 text-white font-medium px-2 py-0.5 rounded-full`}
                                    >
                                        {test.data.dificulty}
                                    </span>
                                </div>

                                <hr />

                                <div>
                                    <div class="flex items-center">
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            fill="none"
                                            viewBox="0 0 24 24"
                                            stroke-width="1.5"
                                            stroke="currentColor"
                                            class="size-6 text-green-700"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                d="M11.35 3.836c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 0 0 .75-.75 2.25 2.25 0 0 0-.1-.664m-5.8 0A2.251 2.251 0 0 1 13.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m8.9-4.414c.376.023.75.05 1.124.08 1.131.094 1.976 1.057 1.976 2.192V16.5A2.25 2.25 0 0 1 18 18.75h-2.25m-7.5-10.5H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V18.75m-7.5-10.5h6.375c.621 0 1.125.504 1.125 1.125v9.375m-8.25-3 1.5 1.5 3-3.75"
                                            />
                                        </svg>

                                        <p class="text-sm font-semibold text-gray-700 mb-0">
                                            Ventajas principales:
                                        </p>
                                    </div>

                                    <ul class="list-disc list-inside text-sm text-gray-600 space-y-1">
                                        {test.data.mainAdvantage.map(
                                            (advantage: any) => (
                                                <li>{advantage}</li>
                                            ),
                                        )}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</div>
